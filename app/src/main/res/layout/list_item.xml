<?xml version="1.0" encoding="utf-8"?><!-- Layout for a single list item -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/element_container"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_height"
    android:minHeight="@dimen/list_item_height"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView
        android:id="@+id/image"
        style="@style/ImageInListItem"
        android:src="@drawable/zaseka" />

    <TextView
        android:id="@+id/first_text_view"
        style="@style/TextInListItem"
        android:textStyle="bold"
        tools:text="name" />

    <TextView
        android:id="@+id/second_text_view"
        style="@style/TextInListItem"
        android:textStyle="italic"
        tools:text="distance" />

    <TextView
        android:id="@+id/third_text_view"
        style="@style/TextInListItem"
        tools:text="address" />

</LinearLayout>